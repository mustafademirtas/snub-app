{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Snub",
  "version": "1.0.0",
  "identifier": "com.mustafademirtas.snub-app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Snub",
        "width": 100,
        "height": 100,
        "resizable": false,
        "center": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "minimizable": false,
        "maximizable": false,
        "visible": false,
        "closable": true,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
